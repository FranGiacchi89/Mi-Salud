<h2>Editar <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <section style="background-color: white;">
   <div class="py-5">
     <div class="row d-flex justify-content-center align-items-center">
       <div class="col-12 col-md-8 col-lg-6 col-xl-5">
         <div class="card shadow-2-strong" style="border-radius: 0.5rem;">
           <div class="card-body p-5 text-center" style="box-shadow: 3px 3px 3px 1px rgba(0, 0, 0, 0.4); border-radius: 8px 8px 8px 8px;">

             <h3 class="mb-5">PERFIL</h3>

                <div class="form-outline mb-4">
                  <%= f.input :photo, label: "Foto",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Carga tu foto de perfil", class:"form-control form-control-lg" } %>

                  <%= f.input :name, label: "Nombre" %>

                  <%= f.input :last_name, label: "Apellido" %>

                  <%= f.input :address, label: "Dirección" %>

                  <%= f.input :email, label: "Email", required: true, autofocus: true %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Actualmente esperando confirmación: <%= resource.unconfirmed_email %></p>
                  <% end %>

                  <%= f.input :password,
                              label: "Nueva contraseña",
                              hint: "Déjalo en blanco si no quieres cambiarlo",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>

                  <%= f.input :password_confirmation,
                              label: "Confirmar contraseña",
                              required: false,
                              input_html: { autocomplete: "new-password" } %>

                  <%= f.input :current_password,
                              label: "Contraseña actual",
                              hint: "Necesitamos su contraseña actual para confirmar sus cambios",
                              required: true,
                              input_html: { autocomplete: "current-password" } %>

                  <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro que deseas eliminar la cuenta?" }, method: :delete, class: "btn btn-secondary" %>

                  <%= f.button :submit, "Guardar" %>

                  <%= link_to "Volver", :back, class: "btn btn-secondary"%>
                </div>
           </div>
         </div>
       </div>
     </div>
   </div>
 </section>

<% end %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 0.5rem;">
            <div class="card-body p-5 text-center" style="box-shadow: 3px 3px 3px 1px rgba(0, 0, 0, 0.4); border-radius: 8px 8px 8px 8px;">

              <h3 class="mb-5">Sign in</h3>

              <div class="form-outline mb-4">
                <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class:"form-control form-control-lg" } %>
              </div>

              <div class="form-outline mb-4">
                <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:"form-control form-control-lg" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <!-- Checkbox -->
              <%= render "devise/shared/links", class:"mt-5" %>
              <%= f.button :submit, "Log in", class:"btn btn-primary btn-lg btn-block mt-3" %>
              <%# <hr class="my-4"> %>
            </div>
          </div>
        </div>
      </div>
<% end %>

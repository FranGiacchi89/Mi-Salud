<div class= "container mt-5 mb-5">
  <div class="card-product">
    <%= cl_image_tag @product.photo.key, class: "imagen", height: 350, crop: :fill %>
    <div class="card-product-infos">
      <h1 style="color: black;"><%= @product.name  %></h1>
        <h2 style="color: black;"><%= @product.price  %> ARS </h2>
        <p style="color: black;"><%= @product.details %></p>
        <a href="#" class="btn btn-primary">Comprar</a>
        <div class= "card-product-infos" >
          <% if @product.user_id == current_user.id %>
          <%= link_to "Delete", product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Estas seguro?"}, class: "btn btn-secondary" %>
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-secondary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>

<div class="no-wrap">
  <div>
    <%= render "shared/sidebar" %>
  </div>
  <div class="contenedor mt-5">
    <div class="contenedor mt-5 mb-1 vh-100">
    <h1 style="position: absolute;margin-top: -33rem;left: 38rem;">Examenes medicos</h1>
    <div class="card d-flex justify-content-center" style="width: 50rem">
      <div class="row" style="position: relative; right: -13rem;">
        <h3 style="position: relative; left: -13rem;    top: 1rem;">Examenes</h3>
        <%= link_to new_habit_path do %>
          <i class="fa-solid fa-plus icono" style="background-color: #09aea6"></i>
        <% end %>
      </div>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">FECHA</th>
              <th scope="col">NOMBRE</th>
              <th scope="col">LUGAR</th>
              <th scope="col">ACCIONES</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <% @exams.each do |exam|  %>
            <tr>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.date%></th>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.name%></th>
              <th scope="row" style="position: relative; text-align: left;"><%= exam.place%></th>


              <td><%= link_to exam_path(exam), data: {turbo_method: :delete, turbo_confirm: "Estas seguro que deseas eliminar el examen?"} do %>
              <i class="fa-solid fa-trash" style="color: #f05168"></i>
              <% end %>

              | <%= link_to edit_exam_path(exam) do %>
              <i class="fa-solid fa-pencil" style="color: #ffcc07"></i>
              <% end %>

              | <%= link_to exam_path(exam)do %>
              <i class="fa-solid fa-eye"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

</div>
  </div>
</div>
